  },
  {
    name: 'Libre Maze',
    description: 'Challenge your mind with endless maze puzzles',
    icon: 'üß©',
    color: '#FFD93D',
    features: ['Random maze generation', 'Multiple difficulty levels', 'Time challenges', 'Progress achievements'],
  },
  {
    name: 'Libre Fitness',
    description: 'Your personal fitness trainer in your pocket',
    icon: 'üí™',
    color: '#A8E6CF',
